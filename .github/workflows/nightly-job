name: Nightly job

on:
  schedule:
  - cron: "0 4 * * *"

jobs:
  build:
    runs-on: ubuntu-latest

    strategy:
      matrix:
        node-version: [12.x]

    steps:
    - uses: actions/checkout@v2
    - run: export NETLIFY_HOOK_BUILD_URL=${{ secrets.NETLIFY_HOOK_BUILD_URL }}
    - run: sh ./scripts/nightly-job.sh
